<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>OrganizationHome Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Linking custom css file -->
  <link rel="stylesheet" href="/css/memberProfile.css">
  <link rel="stylesheet" href="./dist/noty.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />


</head>

<body>
  <section class="header">
    <div class="header-body">

      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/images/logob.png" alt="image"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/memberHome">Home</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/joinProgram">Join Program</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/joinedPrograms">Joined Programs</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/joinedChat">Joined chat</a>
              </li>

              <li class="nav-item">
                <div class="btn-group dropstart">
                  <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="/images/profile.png" alt="">
                  </button>

                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/memberProfile">My Profile</a></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  </ul>
                </div>
              </li>

            </ul>

          </div>
        </div>
      </nav>
      <!-- navbar ends here -->

      <div class="information">
        <div>

        </div>
      </div>

      <!-- Create program starts here -->
      <div class="container emp-profile">
        <form method="post">
          <div class="row">
            <div class="col-md-4">
              <div class="profile-img">
                <img src="http://localhost:4000/<%= user.profilePic %>" alt="" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="profile-head">
                <h5>
                  <%= user.name %>
                </h5>
                <h6>
                  <lord-icon src="https://cdn.lordicon.com/iikoxwld.json" trigger="click"
                    style="width:15px;height:15px">
                  </lord-icon>
                  <%= user.address %>
                </h6>
                <h5>
                  <%= user.userType %>
                </h5>
                <br>
                <br>
                <br>
                <br>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                      aria-selected="true">User Details</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-2">
              <a href="/memberEditProfile"><button type="button" class="btn btn-primary">Edit</button></a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="profile-work">
                <p style="font-size: 20PX;">Reward Point: <%- user.rewardPoints %></p>
                <% if (user.rewardPoints < 500 ) { %>
                  <img src="/badge/CommunityBeginner.png" alt="Badge" width="190" height="200">

                  <% } else if (user.rewardPoints >= 500 && user.rewardPoints < 1000) { %>
                      <img src="/badge/ChangeMaker.png" alt="Badge" width="190" height="200">

                      <% } else if (user.rewardPoints >= 1000 && user.rewardPoints < 1500 ) { %>
                          <img src="/badge/CompassionateContributor.png" alt="Badge" width="190" height="200">

                          <% } else if (user.rewardPoints >= 1500 && user.rewardPoints < 2000 ) { %>
                              <img src="/badge/EmpowermentEnthusiast.png" alt="Badge" width="190" height="200">

                              <% } else { %>
                                <img src="/badge/CommunityChampion.png" alt="Badge" width="190" height="200">
                                <% } %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                  <div class="row">
                    <div class="col-md-6">
                      <label>User Name</label>
                    </div>
                    <div class="col-md-6">
                      <p>
                        <%= user.name %>
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <label>Address</label>
                    </div>
                    <div class="col-md-6">
                      <p>
                        <%= user.address %>
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <label>Email</label>
                    </div>
                    <div class="col-md-6">
                      <p>
                        <%= user.email %>
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <label>user Type</label>
                    </div>
                    <div class="col-md-6">
                      <p>
                        <%= user.userType %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>

      <!-- Create program ends here -->

    </div>
  </section>

  <!-- Footer -->
  <div class="footer-head">
    <footer class="bg-dark text-center text-white">
      <!-- Copyright -->
      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2024 Copyright:
        <a class="text-white">CommunityConnect</a>
      </div>
      <!-- Copyright -->
    </footer>
  </div>
  <!-- Foooter -->

  <script src="https://cdn.lordicon.com/lordicon.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>