<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>OrganizationHome Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Linking custom css file -->
  <link rel="stylesheet" href="/css/joinProgram.css">
    <link rel="stylesheet" href="./dist/noty.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
    

</head>

<body>
  <section class="header">
    <div class="header-body">

      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/images/logob.png" alt="image"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/memberHome">Home</a>
                  </li>

                <li class="nav-item">
                    <a class="nav-link act" aria-current="page" href="/joinProgram">Join Program</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/joinedPrograms">Joined Programs</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="/joinedChat">Joined chat</a>
              </li>

              <li class="nav-item">
                <div class="btn-group dropstart">
                  <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img  class="tick" src="/images/profile.png" alt="">
                  </button>

                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/memberProfile">My Profile</a></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  </ul>
                </div>
              </li>

            </ul>

          </div>
        </div>
      </nav>
      <!-- navbar ends here -->

      <div class="information">
        <h1 style="color: black;">Join Program</h1>
    </div>

      <!-- Create program starts here -->
      <div class="information">
        <div>
            <form action="/searchProgram" method="POST">
            <div class="input-group mb-3">
                <input type="text" name="programName" class="form-control" placeholder="Search by Program Name" aria-label="" aria-describedby="basic-addon1">
                <input type="text" name="programLocation" class="form-control" placeholder="Search by Program Location" aria-label="" aria-describedby="basic-addon1">
                <div class="input-group-prepend">
                  <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
                </div>
            </form>
              </div>
      </div>
      </div>

      <!-- Create program ends here -->
      
      <section class="light">
        <% program.forEach(program=> { %>
                        <article class="postcard light blue">
                            <div class="postcard__text t-dark">
                                <h1 class="postcard__title blue">
                                    <%= program.programTitle %>
                                </h1>
                                <div class="postcard__subtitle small">
                                    <time datetime="<%= program.programDate %> <%= program.programTime %>">
                                        <i class="fas fa-calendar-alt mr-2"></i>Date:<%= program.programDate %>, Time:<%= program.programTime %>
                                    </time>
                                </div>
                                <div class="postcard__bar"></div>
                                <h4 style="font-size: 20px;" class="postcard__preview-txt">
                                    <%= program.programLocation %>
                                </h4>
                                <div class="postcard__preview-txt"><%= program.programDescription %></div>
                                <form action="/joinProgram" method="POST" class="join-form">
                                  <input type="hidden" name="programId" value="<%= program.id %>">
                                  <button type="submit" style="margin-top: 30px;" class="btn btn-primary col-3 join-btn">Join</button>
                              </form>                              
                            </div>
                        </article>
                    <% })%>
    </section>

      <!-- Create program ends here -->

    </div>
  </section>

  <!-- Footer -->
  <div class="footer-head">
    <footer class="bg-dark text-center text-white">
      <!-- Copyright -->
      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2024 Copyright:
        <a class="text-white">CommunityConnect</a>
      </div>
      <!-- Copyright -->
    </footer>

  </div>
  <!-- Foooter -->

  <%- include('./partials/noty') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>