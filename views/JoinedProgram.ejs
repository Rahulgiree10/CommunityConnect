<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OrganizationHome Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Linking custom css file -->
    <link rel="stylesheet" href="/css/joinedPrograms.css">
    <link rel="stylesheet" href="./dist/noty.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />


</head>

<body>
    <section class="header">
        <div class="header-body">

            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><img src="/images/logob.png" alt="image"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/memberHome">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/joinProgram">Join Program</a>
                            </li>

                            <li class="nav-item act">
                                <a class="nav-link act" aria-current="page" href="/joinedPrograms">Joined Program</a>
                            </li>

                            <li class="nav-item">
                                <div class="btn-group dropstart">
                                    <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        <img src=" /images/profile.png" alt="">
                                    </button>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                                        <li><a class="dropdown-item" href="/logout"><button type="button"
                                                    class="btn text-danger">Logout</button></a></li>
                                    </ul>
                                </div>
                            </li>

                        </ul>

                    </div>
                </div>
            </nav>
            <!-- navbar ends here -->

            <div class="information">
                <h1>List of all joined programs by <%= user.name%></h1>
            </div>

            <!-- Create program starts here -->
            <div>

            <section class="light">
                <% joinedPrograms.forEach(joined=> { %>
                    <article class="postcard light blue">
                        <div class="postcard__text t-dark">
                            <h1 class="postcard__title blue">
                                <%= joined.program.programTitle %>
                            </h1>
                            <div class="postcard__subtitle small">
                                <time datetime="<%= joined.program.programDate %> <%= joined.program.programTime %>">
                                    <i class="fas fa-calendar-alt mr-2"></i>
                                    <%= joined.program.programDate %>, <%= joined.program.programTime %>
                                </time>
                            </div>
                            <div class="postcard__bar"></div>
                            <h4 class="postcard__preview-txt">
                                <%= joined.program.programLocation %>
                            </h4>
                            <div class="postcard__preview-txt">
                                <%= joined.program.programDescription %>
                            </div>
                        </div>
                        <a href=""><button class="btn btn-secondary">Chat</button></a>
                    </article>
                    <% }) %>

            </section>
        </div>

            <!-- Create program ends here -->


        </div>
    </section>

    <!-- Footer -->
    <div class="footer-head">
        <footer class="bg-dark text-center text-white">
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                Â© 2024 Copyright:
                <a class="text-white">CommunityConnect</a>
            </div>
            <!-- Copyright -->
        </footer>

    </div>
    <!-- Foooter -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>