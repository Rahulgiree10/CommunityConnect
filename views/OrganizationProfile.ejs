<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>OrganizationHome Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Linking custom css file -->
  <link rel="stylesheet" href="/css/profile.css">

</head>

<body>
  <section class="header">
    <div class="header-body">

      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/images/logob.png" alt="image"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/organizationHome">Home</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/createProgram">Create Program</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/createdPrograms">created Programs</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="#">Khalti</a>
              </li>

              <li class="nav-item">
                <div class="btn-group dropstart">
                  <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img class="tick" src="/images/profile.png" alt="">
                  </button>

                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  </ul>
                </div>
              </li>

            </ul>

          </div>
        </div>
      </nav>
      <!-- navbar ends here -->

      <!-- Card starts here -->
      <div class="main-card">
        <div class="card" style="width: 18rem;">
          <img src="http://localhost:4000/<%= user.profilePic %>" class="card-img-top" alt="...">
          <% if (user.verification==='VERIFIED' ) { %>
            <img class="tick" src="/images/check.png" alt="">
            <% } %>
              <div class="card-body">
                <h5 class="card-title">Profile</h5>
                <p class="card-text">Name: <%= user.name %>
                </p>
                <p class="card-text">Email: <%= user.email %>
                </p>
                <p class="card-text">Address: <%= user.address %>
                </p>
                <a href="/EditProfile"><button type="button" class="btn btn-primary">Edit</button></a>
                <a href="/VerifyPAN"><button type="button" class="btn btn-primary">Verify Organization</button></a>
              </div>
        </div>
      </div>
      <!-- Card ends here -->

    </div>
  </section>

  <!-- Footer -->
  <div class="footer-head">
    <footer class="bg-dark text-center text-white">
      <!-- Copyright -->
      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2024 Copyright:
        <a class="text-white">CommunityConnect</a>
      </div>
      <!-- Copyright -->
    </footer>

  </div>
  <!-- Foooter -->


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>