<script src="https://cdn.jsdelivr.net/npm/noty@3.1.4/lib/noty.js"></script>
    <% if (message.success) { %>
        <script>
            new Noty({
                type: 'success',
                theme: 'sunset',
                layout: 'bottomLeft',
                text: '<%=message.success%>',
                timeout: 3000,
                
            }).show();
        </script>
    <% }%>
    <% if (message.failure) { %>
        <script>
            new Noty({
                type: 'error',
                theme: 'sunset',
                layout: 'bottomLeft',
                text: '<%=message.failure%>',
                timeout: 3000,
            }).show();
        </script>
    <% }%>
    <% if (message.warning) { %>
        <script>
            new Noty({
                type: 'info',
                theme: 'sunset',
                layout: 'bottomLeft',
                text: '<%=message.warning%>',
                timeout: 3000,
            }).show();
        </script>
    <% }%>
