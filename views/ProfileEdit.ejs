<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Profile Edit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Linking custom css file -->
  <link rel="stylesheet" href="/css/profileEdit.css">
    <link href="https://fonts.googleapis.com/css2?family=Pangolin&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
    

</head>

<body>
  <section class="header">
    <div class="header-body">

      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/images/logob.png" alt="image"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/organizationHome">Home</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/createProgram">Create Program</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/createdPrograms">created Programs</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="#">Khalti</a>
              </li>

              <li class="nav-item">
                <div class="btn-group dropstart">
                  <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img class="tick" src="/images/profile.png" alt="">
                  </button>

                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                    <li><a class="dropdown-item" href="/logout"><button type="button"
                          class="btn text-danger">Logout</button></a></li>
                  </ul>
                </div>
              </li>

            </ul>

          </div>
        </div>
      </nav>
      <!-- navbar ends here -->


      <!-- Create program starts here -->
      <div class="mainCreate">
        <div class="updateProfile">
          <form action="/updateProfile" method="post" enctype="multipart/form-data" class="row g-1">
            <div class="col-md-12">
              <label for="email" class="form-label">email</label>
              <input type="text" name="email" class="form-control" id="email" value="<%=user.email%>">
            </div>
            <div class="col-md-12">
                <label for="password" class="form-label">password</label>
                <input type="text" name="password" class="form-control" id="password" value="Password is encrypted" disabled>
            </div>
            <div class="col-6">
              <label for="name" class="form-label">name</label>
              <input type="text" name="name" class="form-control" id="name" value="<%=user.name%>">
            </div>
            <div class="col-6">
              <label for="address" class="form-label">address</label>
              <input type="text" name="address" class="form-control" id="address" value="<%=user.address%>">
            </div>
            <div class="select-field">
                <label for="profilePic" class="form-label">profilePic</label>
                <input type="file" name="profilePic" class="form-control" id="profilePic" value="">
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Create program ends here -->

    </div>
  </section>

  <!-- Footer -->
  <div class="footer-head">
    <footer class="bg-dark text-center text-white">
